order += "ethernet enp0s3"
order += "load"
order += "battery 0"
order += "tztime local"

ethernet enp0s3 {
    format_up = "enp0s3: %ip"
    format_down = "enp0s3"
}

tztime local {
    format = "%Y/%m/%d %H:%M"
}

battery 0 {
    format = "%status %remaining (%emptytime)"
    }
load {
    format = "%5min"
}

